# Content Engine Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# n8n Configuration
# ===================
# Base URL for n8n webhooks (without trailing slash)
N8N_WEBHOOK_BASE_URL=https://your-n8n-instance.com/webhook

# Secret for verifying webhook callbacks from n8n
N8N_CALLBACK_SECRET=your-secret-key-here

# ===================
# Vercel Blob Storage
# ===================
# Token for Vercel Blob (for storing uploaded videos)
BLOB_READ_WRITE_TOKEN=

# ===================
# App Configuration
# ===================
# Public URL of this app (for callback URLs)
NEXT_PUBLIC_APP_URL=http://localhost:3000

